<div class="skill nested-fields">
	<div class="row">
		<div class="five columns">
			<%= f.label :skill %>
			<%= f.text_field :name, class: "u-full-width" %>
		</div>
		
		<div class="five columns">
			<%= f.label :level_of_knowledge %>
			<%= f.range_field :rating, in: 1..100, class: "u-full-width" %>
		</div>
		
		<div class="two columns danger">
			<%= link_to_remove_association("remove", f) %>
		</div>
	</div>
	
	<div class="row">
		<div class="ten columns">
			<%= f.label :description %>
			<%= f.text_area :description, rows: 5, class: "u-full-width" %>
		</div>
	</div>
</div>

<hr>
